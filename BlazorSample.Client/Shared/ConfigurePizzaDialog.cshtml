@inject HttpClient HttpClient
@inject OrderState currentState;
<div class="dialog-container">
    <div class="dialog">
        @if (currentState.ConfiguringPizza != null)
        {
            <div class="dialog-title">
                <h2>@currentState.ConfiguringPizza.Special.Name</h2>
                @currentState.ConfiguringPizza.Special.Description
            </div>
            <form class="dialog-body">
                <div>
                    <label>Size:</label>
                    <input type="range" min="@Pizza.MinimumSize"
                           max="@Pizza.MaximumSize"
                           step="1"
                           value="@currentState.ConfiguringPizza.Size"
                           onchange="@((UIChangeEventArgs  e)=> currentState.ConfiguringPizza.Size= int.Parse(e.Value.ToString()))" />

                    <span class="size-label">
                        @(currentState.ConfiguringPizza.Size)" ($@(currentState.ConfiguringPizza.GetFormattedTotalPrice()))
                    </span>
                </div>
                <div>
                    <label>Extra Toppings:</label>
                    @if (Toppings == null)
                    {
                        <select class="custom-select" disabled>
                            <option>(loading...)</option>
                        </select>
                    }
                    else if (currentState.ConfiguringPizza.Toppings.Count >= 6)
                    {
                        <div>(maximum reached)</div>
                    }
                    else
                    {
                        <select class="custom-select" onchange="@ToppingsSelected">

                            <option value="-1" disabled selected>(select)</option>
                            @for (int i = 0; i < Toppings.Count; i++)
                            {
                                <option value="@i">@Toppings[i].Name - ($ @Toppings[i].GetFormattedPrice())</option>
                            }
                        </select>
                    }
                </div>
                <div>
                    @if (currentState.ConfiguringPizza.Toppings != null)
                    {
                        @foreach (var pizzaTopping in currentState.ConfiguringPizza.Toppings)
                        {
                            <div class="topping">
                                @pizzaTopping.Topping.Name
                                <span class="topping-price">@pizzaTopping.Topping.GetFormattedPrice()</span>
                                <button type="button" class="delete-topping" onclick="@(()=>currentState.RemoveTopping(pizzaTopping.Topping))">x</button>
                            </div>
                        }
                    }
                </div>
            </form>
            <div class="dialog-buttons">
                <button class="btn btn-secondary mr-auto" onclick="@OnCancel">Cancel</button>
                <span class="mr-center">
                    Price: <span class="price">@(currentState.ConfiguringPizza.GetFormattedTotalPrice())</span>
                </span>
                <button class="btn btn-success ml-auto" onclick="@OnConfirm">Order ></button>
            </div>
        }
    </div>

</div>

@functions {
  
    List<Topping> Toppings { get; set; }
    [Parameter]
    Action OnCancel { get; set; }
    [Parameter]
    Action OnConfirm { get; set; }
    protected async override Task OnInitAsync()
    {
        Toppings = await HttpClient.GetJsonAsync<List<Topping>>("/toppings");
    }

    void ToppingsSelected(UIChangeEventArgs e)
    {

        currentState.AddTopping(Toppings[int.Parse(e.Value.ToString())]);
    }
   
}

